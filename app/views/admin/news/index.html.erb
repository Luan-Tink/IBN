<p id="notice"><%= notice %></p>

<h1>Admin News</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Kind</th>
      <th>Cover</th>
      <th>Thumb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_news.each do |admin_news| %>
      <tr>
        <td><%= admin_news.title %></td>
        <td><%= admin_news.description %></td>
        <td><%= admin_news.date %></td>
        <td><%= admin_news.kind %></td>
        <td><%= admin_news.cover %></td>
        <td><%= admin_news.thumb %></td>
        <td><%= link_to 'Show', admin_news %></td>
        <td><%= link_to 'Edit', edit_admin_news_path(admin_news) %></td>
        <td><%= link_to 'Destroy', admin_news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

